<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Debut entete-->

     <template id="entete">
           <table style="width:100%;">
              <tbody>
                <tr>

                  <td style="width:25%;" align="center">

                      <img t-if="res_company.logo" t-att-src="'data:image/png;base64,%s' % res_company.logo.decode('ascii')" t-att-style="'max-width:50%;max-height:50%'"/>
                  </td>
                  <td style="width:25%;font-size: 36px;vertical-align: middle"><strong><span t-field="o.company_id.display_name"/></strong>
                    <p style="font-size: 12px"><span t-field="o.company_id.street"/></p>
                    <p style="font-size: 12px;"><span t-field="o.company_id.website"/></p>
                    <p style="font-size: 12px;">Tél: <span t-field="o.company_id.phone"/> </p>
                  </td>
                  <td style="width:5%;"> </td>
                 <h2>
                     <td>
                         <strong style="font-size: 36px">
                            <span t-if="o.type == 'out_invoice' and (o.state == 'open' or o.state == 'paid')">
                              FACTURE CLIENT
                            </span>
                            <span t-if="o.type == 'out_invoice' and o.state == 'proforma2'">
                              PRO-FORMA
                            </span>
                            <span t-if="o.type == 'out_invoice' and o.state == 'draft'">FACTURE
                              BROUILLON
                            </span>
                            <span t-if="o.type == 'out_invoice' and o.state == 'cancel'">FACTURE
                              ANNULEE
                            </span>
                            <span t-if="o.type == 'out_refund'">AVOIR</span>
                            <span t-if="o.type == 'in_refund'">AVOIR FOURNISSEUR</span>
                            <span t-if="o.type == 'in_invoice'" style="font-size:30 !important">FACTURE FOURNISSEUR</span>
                             <p> </p>
                              <p> </p>
                              <p style="font-size: 18px">N° :&#160;<span t-field="o.number"/>
                                 &#160;&#160;&#160; DU &#160;&#160;
                                <span t-field="o.date_invoice"/>
                             </p>
                        </strong>
                     </td>
                 </h2>
                </tr>

              </tbody>
        </table>
    </template>
    <!--Fin entete-->
</odoo>
