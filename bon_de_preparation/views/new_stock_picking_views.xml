<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <template id="report_picking_mm">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.external_layout">
                        <div class="page">
                            <div class="row">
                                <div class="col-xs-6">
                                    <div t-if="o.move_lines and o.move_lines[0].partner_id and o.move_lines[0].partner_id.id != o.partner_id.id">
                                        <span><strong>Delivery Address:</strong></span>
                                        <div t-field="o.move_lines[0].partner_id"
                                            t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
                                    </div>
                                    <div t-if="o.picking_type_id.code != 'internal' and (not o.move_lines or not o.move_lines[0].partner_id) and o.picking_type_id.warehouse_id.partner_id">
                                       <span><strong><u>Adresse de l'entrepôt:</u></strong></span>
                                        <div t-field="o.picking_type_id.warehouse_id.partner_id"
                                            t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
                                    </div>
                                </div>
                                <div class="col-xs-5 col-xs-offset-1">
                                    <div t-if="o.picking_type_id.code=='incoming' and o.partner_id">
                                        <span> <u> <strong>Fournisseur:</strong> </u></span>
                                    </div>
                                    <div t-if="o.picking_type_id.code=='internal' and o.partner_id">

                                        <span><strong>Warehouse Address:</strong></span>
                                    </div>
                                    <div t-if="o.picking_type_id.code=='outgoing' and o.partner_id">
                                        <span><strong>Customer Address:</strong></span>
                                    </div>
                                    <div t-if="o.partner_id" name="partner_header">
                                        <div t-field="o.partner_id"
                                           t-options='{"widget": "contact", "fields": ["name", "phone", "address"], "no_marker": True, "phone_icons": True}'/>
                                        <p t-if="o.sudo().partner_id.vat"><t t-esc="o.company_id.country_id.vat_label or 'TIN'"/>: <span t-field="o.sudo().partner_id.vat"/></p>
                                    </div>
                                </div>
                            </div>
                            <br/>
                            <img
                                t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', o.name, 600, 100)"
                                style="width:300px;height:50px" class="pull-right mb16"
                                />
                            <h1 t-field="o.name" class="mt0 pull-left"/>
                            <div class="clearfix"/>
                            <table class="table table-condensed">
                                <thead>
                                    <tr>
                                        <th class="text-center" t-if="o.origin"><strong>N° BDC</strong></th>
                                        <th style="border-left: 1px solid #333333;" class="text-center"><strong>DATE BDC</strong></th>

                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td class="text-center" t-if="o.origin">
                                            <span  t-field="o.origin"/>
                                        </td>

                                        <td style="background: #FFFFFF;" class="text-center">
                                           <span>
                                               <t t-esc="o.date" t-options="{'widget': 'date'}" />
                                           </span>
                                            <!--<span t-field="o.date"/>-->
                                        </td>

                                    </tr>
                                </tbody>
                            </table>
                            <br/>
                            <br/>
                          <table class="table table-condensed" t-if="o.move_line_ids">
                              <t t-set="has_barcode" t-value="any([move_lines.product_id and move_lines.product_id.sudo().barcode or move_lines.package_id for move_lines in o.move_line_ids])"/>
                              <t t-set="has_serial_number" t-value="o.move_line_ids.filtered(lambda ml: ml.lot_id or ml.lot_name)" groups="stock.group_production_lot"/>
                              <thead>
                                <tr>
                                    <th class="text-center" width="20%">Article</th>
                                    <th style="border-left: 1px solid #333333;" class="text-center" width="10%">Quantité</th>
                                    <th style="border-left: 1px solid #333333;" class="text-center" width="10%">Unité</th>
                                    <th style="border-left: 1px solid #333333;" class="text-center" width="10%">
                                        Conditionnement
                                    </th>
                                    <th style="border-left: 1px solid #333333;" width="20%" class="text-center">
                                        <t t-if="has_barcode">Code-Barres</t>
                                    </th>

                                    <!--<th width="15%">-->
                                        <!--<t t-if="o.picking_type_id.code != 'incoming'" align="left">Source</t>-->
                                    <!--</th>-->
                                    <!--<th width="20%">-->
                                        <!--<t t-if="has_serial_number">Lot/Serial Number</t>-->
                                    <!--</th>-->

                                </tr>
                              </thead>
                              <tbody>
                                    <tr t-foreach="o.move_lines.sorted(key=lambda m: m.product_id.id)" t-as="move">
                                        <td>
                                            <span t-field="move.product_id.display_name"/><br/>
                                            <span t-field="move.product_id.description_picking"/>
                                        </td>
                                        <td class="text-center">
                                            <span t-if="move.product_qty" t-esc="'{0:,.0f}'.format(int(move.product_qty)).replace(',', ' ')"/>
                                            <span t-if="not move.product_qty" t-esc="move.product_uom._compute_quantity(move.quantity_done, move.product_id.uom_id, rounding_method='HALF-UP')"/>

                                        </td>
                                        <td class="text-center">
                                            <span t-field="move.product_id.uom_id" groups="product.group_uom"/>
                                        </td>

                                        <td class="text-center">

                                            <t t-if="move.product_id.product_tmpl_id.packaging_ids">
                                                <t t-set="pack_name" t-value="move.product_id.product_tmpl_id.packaging_ids[0].name"/>
                                                <span t-esc="pack_name.split()[0]"/>
                                                <span>X</span>
                                                <span t-esc="'{0:,.0f}'.format(int(move.product_id.product_tmpl_id.packaging_ids[0].qty))"/>
                                            </t>
                                            <!--<span t-if="move.product_id.product_tmpl_id.packaging_ids"-->
                                                  <!--t-esc="move.product_id.product_tmpl_id.packaging_ids[0].qty"/>-->

                                        </td>

                                        <td style="background: #FFFFFF;">
                                            <t t-if="has_barcode">
                                                <span t-if="move.product_id and move.product_id.barcode">
                                                    <img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', move.product_id.barcode, 600, 100)" style="width:100%;height:50px"/>

                                                </span>
                                                <div class="text-center">
                                                    <span t-field="move.product_id.barcode"/>
                                                </div>

                                                <!--<span class="text-center">-->
                                                    <!--<t t-field="move.product_id.barcode"/>-->
                                                <!--</span>-->

                                            </t>
                                        </td>

                                    </tr>
                                  <tfoot>
                                    <tr style="border-bottom: 1px solid #333333">
                                        <td style="border-top:0px"></td>
                                        <td style="border-top:0px"></td>
                                        <td style="border-top:0px"></td>
                                        <td style="border-top:0px"></td>
                                        <td style="border-top:0px"></td>

                                    </tr>
                                  </tfoot>
                              </tbody>

                          </table>
                            <p t-if="o.state in ['draft', 'waiting', 'confirmed']">
                                You do not have any products reserved for this picking.  Please click the 'Reserve' button
                                to check if products are available.
                            </p>
                            <p t-field="o.note"/>

                            <div class="footer" style="height:150px">
                                <table width="100%">
                                  <tr>
                                    <td>Imprime le, <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%d-%m-%Y %H:%M')"/></td>
                                    <td style="text-align:right;"><span>Page </span><span class="page" /> / <span class="topage" /></td>
                                  </tr>
                                </table>
                            </div>

                        </div>
                    </t>
                 </t>
             </t>
        </template>
    </data>
</odoo>
