<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <report
        id="report_barrecode_client_bis"
        model="res.partner"
        string="Imprimer Code Barre Encore"
        name="code_barre_client.report_barrecode_client_bis_view"
        file="code_barre_client.report_barrecode_client_bis"
        report_type="qweb-pdf"/>

    <template id="report_barrecode_client_bis_view">
        <t t-call="web.basic_layout">
            <table border="1" style="width:100%; border: 1px solid black;">
                <tr style="border: 1px solid black;">

                <t t-set="i" t-value="1"/>
                <t t-foreach="docs" t-as="doc">
                    <td style="border: 1px solid black;">
                                <t t-if="doc.barcode">
                                    <div align="center" style="margin: 15px;" >
                                        <img
                                         t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' %
                                        ('Code128', doc.barcode, 600, 120)" style="max-height:50pt;max-width:100%;"/>
                                        <p t-field="doc.barcode"/>
                                    </div>
                                </t>
                                <t t-else="">
                                    <p>No barcode</p>
                                </t>
                    </td>

                    <t t-if="i%2 == 0">
                        <tr style="border: 1px solid black;">
                        </tr>
                    </t>

                <t t-set="i" t-value="i+1"/>
                </t>
                </tr>
            </table>
        </t>
    </template>

</odoo>